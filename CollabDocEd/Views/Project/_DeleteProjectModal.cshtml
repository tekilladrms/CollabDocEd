@model CollabDocEd.Models.ProjectModels.DeleteProjectModel

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title">Delete project</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <form method="post"
              data-ajax="true"
              id="form0"
              data-ajax-success="closeWindow"
              asp-controller="Project"
              asp-action="DeleteProject">

            <div class="form-group">
                <label asp-for="ProjectId" />
                <input asp-for="ProjectId" type="hidden" class="form-control">
            </div>


            <input type="submit" class="btn btn-primary" value="Confirm" />
            <button type="button" class="btn btn-danger" data-dismiss="modal" aria-label="Close">
                Cancel
            </button>
        </form>
    </div>

</div>


<script>
    closeWindow = function () {
        $("#addDocumentModalView").modal('hide')
    }
</script>
