@model CollabDocEd.Models.ProjectModels.InviteUserToProjectModel
@{
}

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title">Inviting user to project</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <form method="post"
              data-ajax="true"
              data-ajax-mode="replace"
              data-ajax-update="#divInfo"
              id="form0"
              data-ajax-success="closeWindow"
              asp-controller="Project" 
              asp-action="InviteUserToProject">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <label asp-for="UserEmail">User Email</label>
                <input asp-for="UserEmail" class="form-control">
                
            </div>
            <div class="form-group">
                <label asp-for="ProjectId" />
                <input asp-for="ProjectId" type="hidden" class="form-control">
            </div>

            <input type="submit" class="btn btn-primary" value="Add" />
        </form>
    </div>

</div>

<script>
    closeWindow = function () {
        $("#inviteUserToProjectModal").modal('hide')
    }
</script>
